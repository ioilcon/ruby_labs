# 5

def string_shuffle(str)
    str.chars.shuffle()*""
end

# 7

def is_downcase_palindrome?(str)
    lambda{ |str| str == str.reverse()}.(str.delete("^a-z"))
    # ! str.delete!("^a-z") == str.reverse()
end

# 14

def sort_by_length(str)
    (str.split().sort_by! {|word| word.length()})*" "
end

